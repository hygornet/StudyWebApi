@using StudyWebApi.Enum
@model StudyWebApi.Models.Usuario

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<h1>Cadastrar de Usuário</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome do Usuário</label>
                <input asp-for="Nome" class="form-control" />
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
            <BR />
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <BR />
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                @Html.ValidationMessageFor(x => x.Login)
            </div>
            <BR />
            <div class="form-group">
                <label asp-for="Perfil" class="control-label"></label>
                <select asp-for="Perfil" class="form-control">
                    <option value="0">Selecione</option>
                    <option value="@PerfilEnum.Admin">Administrador</option>
                    <option value="@PerfilEnum.Padrao">Padrão</option>
                </select>
                @Html.ValidationMessageFor(x => x.Perfil)
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                @Html.ValidationMessageFor(x => x.Senha)
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary"> <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

