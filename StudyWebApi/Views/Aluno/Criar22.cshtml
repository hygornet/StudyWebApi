@using StudyWebApi.Enum
@model StudyWebApi.Models.Pessoa

@{
    ViewData["Title"] = "Cadastro de Alunos";
}

<h1>Cadastrar novo aluno</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">

            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome do Aluno</label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StatusCurso" class="control-label">Status do Curso</label>
                @Html.DropDownListFor(m => m.StatusCurso, new SelectList(Enum.GetValues(typeof(StatusCurso))), "Selecione o status do curso", new { @class = "form-control" })
                @* @Html.DropDownList("Status",
                Html.GetEnumSelectList<StatusCurso>(),
                "Selecione o status",
                new {@class = "form-control"}) *@
            </div>
            <div class="form-group">
                <label asp-for="DataIngresso" class="control-label"></label>
                <input asp-for="DataIngresso" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IDCurso" class="control-label"></label>
                <select asp-for="IDCurso" class="form-control" asp-items="ViewBag.NomeCurso">
                    <option diabled selected>Selecione o curso</option>
                    @foreach (var i in ViewBag.NomeCurso)
                    {
                        <option value="@i.IDCurso.ID">@i.NomeCurso</option>
                    }
                </select>
                @* @Html.DropDownListFor(m => m.IDCurso.ID, new SelectList(ViewBag.NomeCurso, "Value", "Text"), "Selecione o curso", new { @class = "form-control" }) *@
                @* @Html.DropDownList("Curso",
                ViewBag.NomeCurso,
                "Selecione o curso",
                new { @class = "form-control" }) *@
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar aluno" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>


